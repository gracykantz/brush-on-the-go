<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <%= cl_image_tag @image.photo, height: 300, width: 400, crop: :fill  %>
  </div>
  <div class="row">
    <div class="col">
      <br><br><strong>Product:</strong>
      <%= @product.title %>
    </div>
    <div class="col">
      <br><br><strong>Booked by:</strong>
      <%= @user.name%>
    </div>
  </div>
  <% @bookings.each do |booking| %>
  <div class="row">
    <div class="col">
      <br><br><strong>Booked from:</strong>
      <%= booking.fromdate %>
    </div>
    <div class="col">
      <br><br><strong>Booked till:</strong>
      <%= booking.todate %>
    </div>
    <div class="col">
      <br><br><strong>Booking Amount in SEK:</strong>
      <%= booking.amount %>
    </div>
    <div class="col">
      <br><br><%= link_to "Edit booking", edit_product_booking_path(@product.id, booking.id), class: 'btn btn-secondary' %>
    </div>
    <div class="col">
      <br><br><%= link_to "Cancel booking", product_booking_path(@product, booking), method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-secondary' %>
    </div>
  </div>
  <% end %>
  <br><br><%= link_to 'Back to Products listing', products_path, class: 'btn btn-secondary'  %>
</div>

