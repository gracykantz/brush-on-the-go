<%= simple_form_for [locals[:product], locals[:booking]] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<div class="form-inputs">
  <%= f.input :fromdate, label: "Starting date", as: :string, required: false, input_html: {class: "datepicker"}%>
  <%= f.input :todate, label: "Returning date",  as: :string, required: false, input_html: {class: "datepicker"}  %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-primary' %>
</div>
<% end %>
