<p id="notice"><%= notice %></p>

<div class="banner" style=" background-image: linear-gradient(45deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.8)), url( <%= image_path 'banner.jpg' %>);">
  <h1>Toothbrushes in your Area</h1>
</div>

<div
id="map"
data-markers="<%= @markers.to_json %>"
data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<!-- Add Filters for Products - Added by Shalini -->
<form class="form-inline">
  <div class="form-group mb-2">
    <%= form_tag products_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
      placeholder: "Toothbrush Anywhere"%>
    </div>
    <button type="submit" class="btn btn-secondary mb-2">Search</button>
    <% end %>
  </form>
  <!-- End of Filter Addition -->

  <% @products.each do |product| %>
  <div class="toothbrush-card">
    <% image = @images.find_by_product_id(product.id)%>
    <div class="background-toothbrush" style="background-image: url(<%= cl_image_path image.photo %>)">
      <h1><i class="far fa-heart heart-icon"></i></h1>
    </div>
    <%= link_to product do%>
    <%#= cl_image_tag image.photo, height: 300, width: 400, crop: :fill  %>
    <h6><%= product.title %></h6>
    <p> <%= product.price %>SEK per night</p>
    <div>
    <% product.rating.times do %>
      <i class="fas fa-star stars"></i>
    <% end %>
    </div>
    <br>
  </div>
  <% end %>
  <% end %>

  <br>
  <div id="space-for-navbar"></div>

